boolean gameover = false;

// CHANGE VARIABLE TO CHANGE THE SPEED THE ROCKET TRAVELS IN
int speed = 20;


void setup() {
  size(1500, 1000);
  for (int i = 0; i < stars.length; i++) {
    stars[i] = new Star();
  }
}


void draw() {
  background(0, 0, 40);

  for (int i = 0; i < stars.length; i++) {
    stars[i].update();
    stars[i].show();
  }
  display();

  textSize(16);
  text("SS JOE MAMA", 170, textlol);
}

if(!gameover){
void display() {
