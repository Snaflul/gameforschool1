    && base1 > 25 
    && line1 > 25 
    && point1 > 25
    && point2 > 25 
    && point3 > 25 
    && window1 > 25
    && back1 > 25 
    && leg11 > 25 
    && leg12 > 25 
    && leg13 > 25 
    && leg21 > 25
    && leg22 > 25 
    && leg23 > 25 
    && textlol > 25) {
    base1-=speed;
    line1-=speed;
    point1-=speed;
    point2-=speed;
    point3-=speed;
    window1-=speed;
    back1-=speed;
    leg11-=speed;
    leg12-=speed;
    leg13-=speed;
